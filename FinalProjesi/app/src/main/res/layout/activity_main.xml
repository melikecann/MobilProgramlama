<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Bilgi Uygulaması"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Quiz Seçenekleri -->
    <Button
        android:id="@+id/btnFlagQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ülke Bayrak Eşleştirme"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnGeneralKnowledge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Genel Kültür"
        app:layout_constraintTop_toBottomOf="@id/btnFlagQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnMapQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Harita Quiz"
        app:layout_constraintTop_toBottomOf="@id/btnGeneralKnowledge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnCapitalQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Başkent Quiz"
        app:layout_constraintTop_toBottomOf="@id/btnMapQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Genel Kültür Bilgisi Kutusu -->
    <TextView
        android:id="@+id/tv_general_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/blue_gray"
        android:padding="8dp"
        android:text="Dünyanın en büyük okyanusu Pasifik Okyanusu'dur."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
